<!-- services.cshtml (Razor View) -->
@{
    ViewBag.Title = "Our Services";
 
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Almajd Services for Catering and Facility Management</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
          rel="stylesheet" />
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />

    <link href="~/css/services.css" rel="stylesheet" />
    <link href="~/css/index.css" rel="stylesheet" />
   
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg bg-white shadow sticky-top">
            <div class="container">
                <!-- Logo and Brand -->
                <a class="navbar-brand d-flex align-items-center" href="">
                    <img src="~/images/logooo-removebg-preview.png"
                         alt="Al Majd Logo"
                         height="40"
                         class="me-2" />
                    <span class="fw-bold text-primary-custom">Al Majd</span>
                </a>

                <!-- Mobile Toggle Button -->
                <button class="navbar-toggler"
                        type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#navbarNavDropdown"
                        aria-controls="navbarNavDropdown"
                        aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Navigation Links -->
                <div class="collapse navbar-collapse justify-content-end"
                     id="navbarNavDropdown">
                    <ul class="navbar-nav me-3">
                        <li class="nav-item">
                            <a class="nav-link fw-medium" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active fw-medium" asp-controller="Services" asp-action="Index">Services</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link fw-medium " asp-controller="About" asp-action="Index">Who Are We</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link fw-medium" asp-controller="Career" asp-action="Index">Career</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link fw-medium" asp-controller="Contact" asp-action="Index">Contact</a>
                        </li>
                    </ul>

                    <!-- Language Selector Button -->
                    <div class="d-flex align-items-center">
                        <a id="languageButton"
                           href="javascript:void(0);"
                           class="btn btn-sm btn-outline-primary-custom rounded-pill px-3 d-flex align-items-center"
                           onclick="switchLanguage('en')">
                            <i class="bi bi-translate me-1"></i>العربية
                        </a>
                    </div>
                </div>
            </div>
        </nav>
    </header>
<!-- Header Section -->
<section class="py-5 pattern-bg text-center text-dark">
    <div class="container">
            <h1 class="fw-bold text-secondary-custom  display-5">Our Services</h1>
            <p class="lead mt-3 text-secondary-custom">Professional solutions tailored to your business needs</p>
    </div>
</section>

    <!-- Overview Section with Overlapping Images -->
    <section class="py-5">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6 mb-4 mb-lg-0">
                    <div class="image-container">
						<img src="~/images/IMG-20250405-WA0060.jpg" alt="Catering Services" class="image-back" />
                        <img src="~/images/image-asset.jpeg" alt="Facility Management" class="image-front" />
                    </div>
                </div>
                <div class="col-lg-6">
                    <h2 class="fw-bold text-primary-custom">Tailored Catering Solutions for Business & Industry</h2>
                    <div class="border-bottom border-2 border-secondary w-25 mt-2 mb-4"></div>
                    <p>
                        We excel in providing large-scale catering solutions for industrial and corporate sectors, ensuring a well-fed, efficient workforce while adhering to budgetary constraints. Our expertise lies in delivering high-quality, nutritious, and diverse international menus designed to meet the unique needs of each client. A satisfied workforce is key to operational success, and our bespoke catering services are crafted to enhance productivity and morale.
                    </p>
                    <p>
                        We understand that every contract comes with specific requirements, and our team of experienced professionals specializes in designing customized catering solutions to meet those needs comprehensively. Our approach emphasizes flexibility, efficiency, and attention to detail, ensuring exceptional service in every environment we operate.
                    </p>
                    <a href="#services" class="btn btn-primary-custom mt-3">Explore Our Services</a>
                </div>
            </div>
        </div>
    </section>

    <!-- Detailed Service Sections with Alternating Layout -->
    <section id="services" class="py-5 bg-light-custom">
        <div class="container">
            <div class="row justify-content-center mb-5">
                <div class="col-lg-8 text-center">
                    <h2 class="fw-bold text-primary-custom">What We Offer</h2>
                    <div class="border-bottom border-2 border-secondary w-25 mx-auto mt-2 mb-4"></div>
                    <p class="lead">
                        From camp management to industrial catering, we deliver with precision and care.
                    </p>
                </div>
            </div>

            <!-- Service 1: Image Left, Text Right -->
            <div class="row align-items-center py-5">
                <div class="col-lg-6 mb-4 mb-lg-0">
                    <div class="image-container">
                        <img src="~/images/3.jpg" alt="Facility Management Background" class="image-back" />
                        <img src="~/images/2.jpg" alt="Facility Management" class="image-front" />
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="ps-lg-4">
                        <h3 class="fw-bold text-primary-custom">Facility Management</h3>
                        <div class="border-bottom border-2 border-secondary w-25 mt-2 mb-4"></div>
                        <p>
                            Our Facility Management service ensures seamless operation of your buildings and assets. We provide tailored support to businesses, institutions, and industrial zones aiming for efficiency and safety in daily operations.
                        </p>
                        <ul class="list-unstyled ps-0">
                            <li>✅ 24/7 maintenance and repairs</li>
                            <li>✅ Cleaning and sanitation services</li>
                            <li>✅ Utility management and monitoring</li>
                            <li>✅ Safety compliance and inspections</li>
                        </ul>
                        <a href="/Contact" class="btn btn-primary-custom mt-3">Contact Us for a Quote</a>
                    </div>
                </div>
            </div>

            <hr class="my-5" />

            <!-- Service 2: Text Left, Image Right -->
            <div class="row align-items-center py-5">
                <div class="col-lg-6 order-lg-2 mb-4 mb-lg-0">
                    <div class="image-container">
                        <img src="~/images/al-quoz-labor-camp-272-01-pqllykg3kjvbmu1aglcabvuxekr3t4bx3o0hqudqi8.jpg" alt="Camp Management Background" class="image-back" />
                        <img src="~/images/IMG-20250405-WA0063.jpg" alt="Camp Management" class="image-front" />
                    </div>
                </div>
                <div class="col-lg-6 order-lg-1">
                    <div class="pe-lg-4">
                        <h3 class="fw-bold text-primary-custom">Camp Management</h3>
                        <div class="border-bottom border-2 border-secondary w-25 mt-2 mb-4"></div>
                        <p>
                            Tailored for remote workforces and large-scale housing, our Camp Management service provides everything from accommodation and dining to safety and recreation. Ideal for construction sites, oil & gas, and large projects.
                        </p>
                        <ul class="list-unstyled ps-0">
                            <li>✅ End-to-end camp setup and operation</li>
                            <li>✅ On-site staff management</li>
                            <li>✅ Health and wellness infrastructure</li>
                            <li>✅ Routine facility audits</li>
                        </ul>
                        <a href="/Contact" class="btn btn-primary-custom mt-3">Book a Consultation</a>
                    </div>
                </div>
            </div>

            <hr class="my-5" />

            <!-- Service 3: Image Left, Text Right -->
            <div class="row align-items-center py-5">
                <div class="col-lg-6 mb-4 mb-lg-0">
                    <div class="image-container">
                        <img src="~/images/dallas-best-catering-services.jpg" alt="Industrial Catering Background" class="image-back" />
                        <img src="~/images/IMG-20250405-WA0054.jpg" alt="Industrial Catering" class="image-front" />
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="ps-lg-4">
                        <h3 class="fw-bold text-primary-custom">Industrial Catering</h3>
                        <div class="border-bottom border-2 border-secondary w-25 mt-2 mb-4"></div>
                        <p>
                            Our catering services serve thousands of employees every day with nutritious, fresh meals. We serve factories, warehouses, plants, and corporate cafeterias with complete catering logistics and customizable menus.
                        </p>
                        <ul class="list-unstyled ps-0">
                            <li>✅ Daily menu planning</li>
                            <li>✅ On-site kitchen management</li>
                            <li>✅ HACCP-compliant food handling</li>
                            <li>✅ Multi-shift meal scheduling</li>
                        </ul>
                        <a href="/Contact" class="btn btn-primary-custom mt-3">Get a Catering Plan</a>
                    </div>
                </div>
            </div>

            <hr class="my-5" />

            <!-- Service 4: Text Left, Image Right -->
            <div class="row align-items-center py-5">
                <div class="col-lg-6 order-lg-2 mb-4 mb-lg-0">
                    <div class="image-container">
                        <img src="~/images/MEA-Catering-crew.jpg" alt="Rig Catering Background" class="image-back" />
                        <img src="~/images/Offshore-catering-services-feature-image.jpg" alt="Rig Catering" class="image-front" />
                    </div>
                </div>
                <div class="col-lg-6 order-lg-1">
                    <div class="pe-lg-4">
                        <h3 class="fw-bold text-primary-custom">Rig Catering</h3>
                        <div class="border-bottom border-2 border-secondary w-25 mt-2 mb-4"></div>
                        <p>
                            Designed for offshore oil and gas operations, our Rig Catering services meet high safety standards and provide consistent, satisfying meals and comfort services in isolated and challenging environments.
                        </p>
                        <ul class="list-unstyled ps-0">
                            <li>✅ Offshore meal delivery and kitchen setup</li>
                            <li>✅ Emergency rations and backup supplies</li>
                            <li>✅ Hygiene and lodging support</li>
                            <li>✅ Compliance with marine and HSE standards</li>
                        </ul>
                        <a href="/Contact" class="btn btn-primary-custom mt-3">Request Offshore Service</a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Bootstrap JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

  
